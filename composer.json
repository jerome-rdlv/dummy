{
    "name": "jerome-rdlv/dummy",
    "description": "Generate rich and complex dummy content in WordPress for testing and development purpose",
    "type": "wp-cli-package",
    "homepage": "https://github.com/jerome-rdlv/dummy",
    "support": {
        "issues": "https://github.com/jerome-rdlv/dummy/issues",
        "source": "https://github.com/jerome-rdlv/dummy"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jérôme Mulsant",
            "email": "jerome@rue-de-la-vieille.fr",
            "homepage": "https://rue-de-la-vieille.fr"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "wordpress-install-dir": "site/web/wp",
        "installer-paths": {
            "site/web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "site/web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "site/web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    },
    "autoload": {
        "classmap": [
            "vendor_prefixed/",
            "src/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "config/"
        ]
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "ext-zip": "*",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "wpackagist-plugin/advanced-custom-fields": ">=5.7",
        "phpunit/phpunit": "^8.0",
        "wp-cli/wp-cli": "^2.5",
        "humbug/php-scoper": "^0.15.0",
        "johnpbloch/wordpress": "^5.8",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/yaml": "^3.4",
        "symfony/dependency-injection": "^3.4",
        "symfony/config": "^3.4",
        "fzaninotto/faker": "^1.5"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "scripts": {
        "wp-cli:install": [
            "test -x 'site/bin/wp' && exit 0; mkdir -p site/bin; cd site/bin; curl https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar -o wp; chmod 744 wp"
        ],
        "prefix-dependencies": [
            "@php ./vendor/humbug/php-scoper/bin/php-scoper add-prefix --output-dir=./vendor_prefixed --config=config/scoper.inc.php --force --quiet"
        ],
        "post-update-cmd": [
            "@wp-cli:install"
        ],
        "post-autoload-dump": [
            "Rdlv\\WordPress\\Dummy\\Composer\\Actions::prefix_dependencies"
        ]
    }
}
