{
    "name": "jerome-rdlv/dummy",
    "description": "Generate rich and complex dummy content in WordPress for testing and development purpose",
    "type": "wp-cli-package",
    "homepage": "https://github.com/jerome-rdlv/dummy",
    "support": {
        "issues": "https://github.com/jerome-rdlv/dummy/issues",
        "source": "https://github.com/jerome-rdlv/dummy"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jérôme Mulsant",
            "email": "jerome@rue-de-la-vieille.fr",
            "homepage": "https://rue-de-la-vieille.fr"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.2"
        },
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "wordpress-install-dir": "site/web/wp",
        "installer-paths": {
            "site/web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "site/web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "site/web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    },
    "autoload": {
        "classmap": [
            "vendor_prefixed/",
            "src/"
        ],
        "files": [
            "command.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "config/"
        ]
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-zip": "*"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.5",
        "guzzlehttp/guzzle": "^6.3",
        "johnpbloch/wordpress": "^5.8",
        "phpunit/phpunit": "^8.0",
        "symfony/config": "^3.4",
        "symfony/dependency-injection": "^3.4",
        "symfony/yaml": "^3.4",
        "wpackagist-plugin/advanced-custom-fields": ">=5.7",
        "wp-cli/wp-cli": "^2.5"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "scripts": {
        "prefix-dependencies": [
            "cd vendor/bin; curl -L https://github.com/humbug/php-scoper/releases/download/0.15.0/php-scoper.phar -o php-scoper",
            "@php vendor/bin/php-scoper add-prefix --output-dir=./vendor_prefixed --force"
        ],
        "post-update-cmd": [
            "mkdir -p site/bin; cd site/bin; ln -sf ../../vendor/wp-cli/wp-cli/bin/wp"
        ],
        "pre-autoload-dump": [
            "Rdlv\\WordPress\\Dummy\\Composer\\Actions::prefix_dependencies",
            "touch vendor_prefixed/.gitkeep"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "package": [
            "mkdir -p build",
            "cp -r inc vendor_prefixed src command.php composer.json composer.lock README.md services.yaml wp-cli.yml build",
            "@composer --working-dir=./build --no-dev --no-scripts -o -- install",
            "mkdir -p packages",
            "out=\"packages/dummy-$(git describe --tags).zip\"; rm \"$out\"; cd build; zip -qr \"../$out\" ./*",
            "rm -rf build"
        ]
    }
}
